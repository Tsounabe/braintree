{% extends model('component') %}

{% define config = {
    name: 'payment-form',
    tag: 'payment-form'
} %}

{% define data = {
    form: required,
    scriptSrc: 'https://js.braintreegateway.com/js/braintree-2.32.1.min.js'
} %}

{% define attributes = {
    'data-error-message': 'Braintree.payment_method.error_message' | trans
} %}

{% block body %}
    {% include molecule('script-loader') with {
        attributes: {
            src: data.scriptSrc
        }
    } only %}
{% endblock %}
